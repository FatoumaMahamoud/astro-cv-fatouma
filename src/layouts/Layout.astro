---
import Avatar from '../components/Avatar.astro';
import Title from '../components/Title.astro';
import Subtitle from '../components/Subtitle.astro';
import Skills from '../components/Skills.astro';
import Languages from '../components/Languages.astro';
import Experience from '../components/Experience.astro';
import Education from '../components/Education.astro';
import Social from '../components/Social.astro';
const { frontmatter } = Astro.props;
---
<!DOCTYPE html>
<html>
<head>
<title>W3.CSS Template</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="generator" content={Astro.generator} />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
html,body,h1,h2,h3,h4,h5,h6 {font-family: "Roboto", sans-serif}
</style>
</head>
<body class="w3-light-grey">

<!-- Page Container -->
<div class="w3-content w3-margin-top" style="max-width:1400px;">

  <!-- The Grid -->
  <div class="w3-row-padding">
  
    <!-- Left Column -->
    <div class="w3-third">
    
      <div class="w3-white w3-text-grey w3-card-4">
        <Avatar name={frontmatter.name} image={frontmatter.image} />
        <div class="w3-container">
          <p><i class="fa fa-briefcase fa-fw w3-margin-right w3-large w3-text-teal"></i>{frontmatter.function}</p>
          <p><i class="fa fa-home fa-fw w3-margin-right w3-large w3-text-teal"></i>{frontmatter.address}</p>
          <p><i class="fa fa-envelope fa-fw w3-margin-right w3-large w3-text-teal"></i>{frontmatter.email}</p>
          <p><i class="fa fa-phone fa-fw w3-margin-right w3-large w3-text-teal"></i>{frontmatter.telephone}</p>
          <hr>

          <Subtitle text="Skills" icon="fa-asterisk" />
          <Skills lists={frontmatter.skills}/>
          <br>

          <Subtitle text="Languages" icon="fa-globe" />
          <Languages lists={frontmatter.languages}/>
          <br>
        </div>
      </div><br>

    <!-- End Left Column -->
    </div>

    <!-- Right Column -->
    <div class="w3-twothird">
    
      <div class="w3-container w3-card w3-white w3-margin-bottom">
        <Title text="Work Experience" icon="fa-suitcase" />
        <Experience/>
      </div>

      <div class="w3-container w3-card w3-white">
        <Title text="Education" icon="fa-certificate" />
        <Education/>
      </div>

    <!-- End Right Column -->
    </div>
    
  <!-- End Grid -->
  </div>
  
  <!-- End Page Container -->
</div>

<footer class="w3-container w3-teal w3-center w3-margin-top">
  <Social/>
  <p>Powered by <a href="https://www.w3schools.com/w3css/default.asp" target="_blank">w3.css</a></p>
</footer>

</body>
</html>